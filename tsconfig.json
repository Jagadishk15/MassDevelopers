{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "noImplicitAny": false,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "preserveValueImports": false,
    "importsNotUsedAsValues": "preserve",
    "baseUrl": ".",
    "types": [
      "naive-ui/volar"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}